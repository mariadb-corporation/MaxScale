[maxscale]
threads=###threads###
log_info=1

[server1]
type=server
address=###node_server_IP_1###
port=###node_server_port_1###
protocol=MySQLBackend

[server2]
type=server
address=###node_server_IP_2###
port=###node_server_port_2###
protocol=MySQLBackend

[MySQL-Monitor]
type=monitor
module=mysqlmon
servers=server1,server2
user=maxskysql
password=skysql
monitor_interval=1000

[RW-Split-Router]
type=service
router=readwritesplit
servers=server1,server2
user=maxskysql
password=skysql
optimistic_trx=true
master_failure_mode=fail_on_write

[RW-Split-Listener]
type=listener
service=RW-Split-Router
protocol=MySQLClient
port=4006

[CLI]
type=service
router=cli

[CLI-Listener]
type=listener
service=CLI
protocol=maxscaled
socket=default
