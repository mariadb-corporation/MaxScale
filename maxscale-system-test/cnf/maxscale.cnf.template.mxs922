[maxscale]
threads=###threads###

[mysql-monitor]
type=monitor
module=mysqlmon
user=maxskysql
passwd=skysql
monitor_interval=1000

[rwsplit-service]
type=service
router= readwritesplit
user=maxskysql
passwd=skysql

[read-connection-router-slave]
type=service
router=readconnroute
user=maxskysql
passwd=skysql

[read-connection-router-master]
type=service
router=readconnroute
router_options=master
user=maxskysql
passwd=skysql

[rwsplit-service-listener]
type=listener
service=rwsplit-service
protocol=MySQLClient
port=4006

[read-connection-router-slave-listener]
type=listener
service=read-connection-router-slave
protocol=MySQLClient
port=4009

[read-connection-router-master-listener]
type=listener
service=read-connection-router-master
protocol=MySQLClient
port=4008

[CLI]
type=service
router=cli

[CLI Listener]
type=listener
service=CLI
protocol=maxscaled
socket=default
