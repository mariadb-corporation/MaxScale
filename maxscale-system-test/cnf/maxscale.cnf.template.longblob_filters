[maxscale]
threads=###threads###
log_info=1

[MySQL-Monitor]
type=monitor
module=mysqlmon
servers= server1, server2,server3  ,server4
user=maxskysql
password= skysql
monitor_interval=1000
backend_connect_timeout=10
backend_read_timeout=10

[RW-Split-Router]
