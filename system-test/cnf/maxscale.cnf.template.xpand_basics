[maxscale]
threads=###threads###
log_info=1

###xpand_server###

[Xpand-Monitor]
type=monitor
module=xpandmon
servers=###xpand_server_line###
user=maxskysql
password=skysql

[RWS]
type=service
router=readwritesplit
cluster=Xpand-Monitor
user=rwsplit_user
password=rwsplit_pw
slave_selection_criteria=LEAST_GLOBAL_CONNECTIONS
max_slave_connections=1

[RCR]
type=service
router=readconnroute
router_options=master
cluster=Xpand-Monitor
user=maxskysql
password=skysql

[RWS-Listener]
type=listener
service=RWS
protocol=MySQLClient
port=4006

[RCR-Listener]
type=listener
service=RCR
protocol=MySQLClient
port=4008

