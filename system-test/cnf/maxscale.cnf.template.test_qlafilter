[maxscale]
threads=###threads###

[MariaDB-Monitor]
type=monitor
module=mariadbmon
servers=###server_line###
user=maxskysql
password=skysql
monitor_interval=1000

###server###

[QLA]
type=filter
module=qlafilter
filebase=/tmp/qla.log
flush=true

[RW-Split-Router]
type=service
router=readwritesplit
servers=###server_line###
user=maxskysql
password=skysql
filters=QLA

[RW-Split-Listener]
type=listener
service=RW-Split-Router
protocol=mariadbclient
port=4006
