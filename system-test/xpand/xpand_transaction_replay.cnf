[maxscale]
threads=###threads###
log_info=1

###xpand_server###

[Xpand-Monitor]
type=monitor
module=xpandmon
servers=###xpand_server_line###
user=xpandmon
password=xpandmon

[RWS]
type=service
router=readwritesplit
cluster=Xpand-Monitor
user=maxskysql
password=skysql
transaction_replay=true
transaction_replay_retry_on_deadlock=true
delayed_retry_timeout=30s

[RCR]
type=service
router=readconnroute
router_options=master
cluster=Xpand-Monitor
user=maxskysql
password=skysql

[RWS-Listener]
type=listener
service=RWS
protocol=MySQLClient
port=4006

[RCR-Listener]
type=listener
service=RCR
protocol=MySQLClient
port=4008

